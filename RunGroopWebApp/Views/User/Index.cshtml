
﻿@using RunGroopWebApp.ViewModels
@model List<UserViewModel>

<section class="flush-with-above">
    <div class="container">
        <div class="row">
            
                @if (Model !=null){
                        @foreach (var user in Model)
                        {
                                <div class="col-md-4">
                                    <div class="card mb-4 box-shadow">
                                        <img class="card-img-top" src="@user.ProfileImageUrl" width="100%" height="225" alt="Card image cap">
                                        <div class="card-body">
                                            <p class="card-text">@user.UserName</p>
                                            @{
                                                var mileage = user.Milage == null ? "?" : user.Milage.ToString();
                                                var pace = user.Pace == null ? "?" : user.Pace.ToString();
                                            }
                                            <p class="card-text">@mileage mile at @pace mph</p>
                                            @* <p class="card-text">@user.Location</p> *@
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="btn-group">
                                                    <a type="button" asp-controller="User" asp-action="Detail" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">View</a>

                                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                                    {
                                                        <a type="button" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                                        <a type="button" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                                    }
                                                </div>
                                             
                                            </div>
                                        </div>
                                    </div>
                                </div>

                      
                        }
                        
                }
               
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>